{
	"name": "minipack_ts",
	"version": "0.6.0",
	"description": "A VERY basic TypeScript bundler that doesn't compile to JS",
	"keywords": [
		"typescript",
		"bundler",
		"codingame"
	],
	"author": "Zweih√§nder",
	"main": "index.js",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Zweihander-Main/minipack_ts/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:Zweihander-Main/minipack_ts.git"
	},
	"scripts": {
		"build": "babel ./src/minipack.js --out-dir build",
		"test": "jest --no-cache",
		"testWatch": "jest --watch --no-cache"
	},
	"jest": {
		"transform": {
			"^.+\\.jsx?$": "babel-jest"
		},
		"coverageDirectory": "coverage",
		"roots": [
			"<rootDir>/src/"
		],
		"testEnvironment": "node",
		"moduleNameMapper": {
			"^.+\\.hbs$": "<rootDir>/src/__mocks__/hbsMock.js"
		},
		"preset": "ts-jest"
	},
	"eslintConfig": {
		"env": {
			"node": true,
			"es6": true
		},
		"parserOptions": {
			"ecmaVersion": 2019,
			"sourceType": "module"
		},
		"plugins": [
			"jest"
		],
		"rules": {
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				"error",
				"always"
			],
			"no-console": "off",
			"no-mixed-spaces-and-tabs": [
				"error",
				"smart-tabs"
			]
		}
	},
	"eslintIgnore": [
		"**/__*__/**/*.*"
	],
	"prettier": {
		"singleQuote": true,
		"trailingComma": "es5",
		"tabWidth": 4,
		"useTabs": true,
		"arrowParens": "always"
	},
	"browserslist": [
		"maintained node versions"
	],
	"babel": {
		"presets": [
			"@babel/preset-env"
		]
	},
	"dependencies": {
		"@typescript-eslint/typescript-estree": "^2.31.0",
		"node-source-walk": "^4.2.0",
		"typescript": "^3.8.3"
	},
	"devDependencies": {
		"@babel/cli": "^7.8.4",
		"@babel/core": "^7.9.6",
		"@babel/preset-env": "^7.9.6",
		"@babel/register": "^7.9.0",
		"@types/jest": "^25.2.1",
		"babel-jest": "^26.0.1",
		"eslint": "^7.0.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-jest": "^23.10.0",
		"eslint-plugin-prettier": "^3.1.3",
		"jest": "^26.0.1",
		"jest-mock-console": "^1.0.0",
		"prettier": "^2.0.5",
		"ts-jest": "^25.5.1"
	}
}
